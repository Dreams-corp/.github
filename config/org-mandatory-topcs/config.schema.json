{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "GitHub Repository Topics",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "repositoryName": {
          "type": "string",
          "pattern": "^[^,\\s]+$",
          "description": "The name of the repository. Must not contain commas or spaces."
        },
        "repositoryTopics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the topic. Can be empty."
              }
            },
            "required": ["name"]
          }
        }
      },
      "required": ["repositoryName"]
    }
  }